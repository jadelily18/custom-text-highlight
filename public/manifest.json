{
    "name": "Custom Text Highlight",
    "description": "Extension that allows you to overwrite text highlight colors on most websites.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "options_page": "index.html",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "run_at": "document_idle",
            "js": ["injectCss.js"]
        }
    ]
}